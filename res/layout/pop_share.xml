<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/pop_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sel_share_button"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share_icon_weixin"
            android:gravity="center"
            android:padding="5dp"
            android:text="微信"
            android:textColor="@color/black6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pop_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sel_share_button"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share_icon_circle"
            android:gravity="center"
            android:padding="5dp"
            android:text="朋友圈"
            android:textColor="@color/black6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pop_qzone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sel_share_button"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share_icon_qzone"
            android:gravity="center"
            android:padding="5dp"
            android:text="QQ空间"
            android:textColor="@color/black6"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pop_sina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sel_share_button"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share_icon_sina"
            android:gravity="center"
            android:padding="5dp"
            android:text="新浪微博"
            android:textColor="@color/black6"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/pop_cacel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        android:src="@drawable/close_green" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp" />

</LinearLayout>