<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_" />

    <include layout="@layout/mine_setting" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="@dimen/xiexie10"
        android:layout_marginRight="@dimen/xiexie10"
        android:background="@null"
        android:drawablePadding="6dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:hint="用户昵称"
        android:singleLine="true"
        android:maxLength="12"
        android:paddingLeft="6dp"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/button_background" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="@dimen/xiexie10"
        android:layout_marginRight="@dimen/xiexie10"
        android:background="@null"
        android:drawablePadding="6dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="密码"
        android:singleLine="true"
        android:maxLength="16"
        android:paddingLeft="6dp"
        android:password="true"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/button_background" />

    <EditText
        android:id="@+id/et_spwd"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="@dimen/xiexie10"
        android:layout_marginRight="@dimen/xiexie10"
        android:background="@null"
        android:drawablePadding="6dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="确认密码"
        android:singleLine="true"
        android:maxLength="16"
        android:paddingLeft="6dp"
        android:password="true"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/button_background" />

    <EditText
        android:id="@+id/et_tel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="@dimen/xiexie10"
        android:layout_marginRight="@dimen/xiexie10"
        android:background="@null"
        android:drawablePadding="6dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="手机号码"
        android:singleLine="true"
        android:maxLength="11"
        android:paddingLeft="6dp"
        android:inputType="number"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/button_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_vertifacation"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginLeft="@dimen/xiexie10"
            android:layout_marginRight="@dimen/xiexie10"
            android:layout_weight="2"
            android:background="@null"
            android:drawablePadding="6dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="验证码"
            android:singleLine="true"
            android:maxLength="6"
            android:inputType="number"
            android:paddingLeft="6dp"
            android:textSize="16sp" />

        <com.lhdz.wediget.TimeButton
            android:id="@+id/send_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/xiexie10"
            android:background="@drawable/shape_getcaptcha"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/button_background" />

    <Button
        android:id="@+id/bt_reg"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/xiexie10"
        android:layout_marginRight="@dimen/xiexie10"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_oppointment"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="17sp" />

</LinearLayout>