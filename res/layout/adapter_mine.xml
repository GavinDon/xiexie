<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sel_white2gray"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="63dp"
        android:layout_marginLeft="@dimen/xiexie10"
        android:gravity="center_vertical"
         >

        <ImageView
            android:id="@+id/minelv_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/minelv_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/minelv_iv"
           android:layout_centerVertical="true"
           android:textSize="16sp"
           android:textColor="@color/black3"
            android:text="收蒧" />

        <ImageView
            android:id="@+id/minelv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/xiexie10"
            android:src="@drawable/arrow_gray_r" />

    </RelativeLayout>

</LinearLayout>