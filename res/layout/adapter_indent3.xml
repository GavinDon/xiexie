<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#dff6f4"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_indent_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#befffa"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="14dp"
                android:text="@string/s_name"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="服务中"
                android:textColor="#318906"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="14dp"
            android:paddingTop="10dp"
            android:text="订单号：JLY26369942321152244669423"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="14dp"
                android:text="服务类型: 钟点服务"
                android:textColor="#aab3b2"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="服务时长: 2小时"
                android:textColor="#aab3b2"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="14dp"
                android:text="订单金额: 80元"
                android:textColor="#aab3b2"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="心理价位: 40元/小时"
                android:textColor="#aab3b2"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="14dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <Button
                android:layout_width="76dp"
                android:layout_height="23dp"
                android:layout_marginRight="14dp"
                android:background="#03b26e"
                android:gravity="center"
                android:text="聊天"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/bt_complaints"
                android:layout_width="76dp"
                android:layout_height="23dp"
                android:layout_marginRight="14dp"
                android:background="#ed2b00"
                android:gravity="center"
                android:text="投诉"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:layout_width="76dp"
                android:layout_height="23dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/selector_oppointment"
                android:gravity="center"
                android:text="评价"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:layout_width="76dp"
                android:layout_height="23dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/selector_oppointment"
                android:gravity="center"
                android:text="撤单"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="gone" />

            <Button
                android:layout_width="76dp"
                android:layout_height="23dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/selector_oppointment"
                android:gravity="center"
                android:text="选择服务"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="gone" />

            <Button
                android:layout_width="76dp"
                android:layout_height="23dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/selector_oppointment"
                android:gravity="center"
                android:text="付款"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
