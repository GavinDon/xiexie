<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.lhdz.wediget.MyViewPager
            android:id="@+id/viewpager_ad"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:visibility="visible" >
        </com.lhdz.wediget.MyViewPager>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divideline" />

        <View
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="#f0f0f0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divideline" />

        <com.lhdz.wediget.MyViewPager
            android:id="@+id/viewpager_shotcut_key"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="14dp" >
        </com.lhdz.wediget.MyViewPager>

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="center_horizontal|center_vertical" >

            <ImageView
                android:id="@+id/slidepoint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shotcut_greesilde" />

            <ImageView
                android:id="@+id/slidepoint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shotcut_slidepoint" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divideline" />

        <View
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="#f0f0f0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divideline" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/out_of_time"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="6dp"
            android:background="@color/lowgray"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_onedollar_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 元预约服务"
                    android:textColor="#f5885d"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 新用户专享" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_marginTop="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/yuan1" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="6dp"
            android:background="@color/lowgray"
            android:visibility="gone" />

        <com.lhdz.wediget.LineGridView
            android:id="@+id/gridview_"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/shape_gridview"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:visibility="gone" >
        </com.lhdz.wediget.LineGridView>

        <View
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_marginTop="4px"
            android:background="#f0f0f0"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_home_iphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_iphone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divideline" />

        <View
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="#f0f0f0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divideline" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/hot_recommend" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divideline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_home_arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/arrow_gray_l" />

            <HorizontalScrollView
                android:id="@+id/hs_home_hotcompany"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none" >

                <RadioGroup
                    android:id="@+id/rg_home_hotcompany"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/rb_home_clean"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="保洁"
                        android:textColor="@drawable/selector_rb_hotcompany"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/divideline" />

                    <RadioButton
                        android:id="@+id/rb_home_move"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:button="@null"
                        android:gravity="center"
                        android:text="搬家"
                        android:textColor="@drawable/selector_rb_hotcompany"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/divideline" />

                    <RadioButton
                        android:id="@+id/rb_home_furniture"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:button="@null"
                        android:gravity="center"
                        android:text="家具维修"
                        android:textColor="@drawable/selector_rb_hotcompany"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:background="@color/divideline" />

                    <RadioButton
                        android:id="@+id/rb_home_pet"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:button="@null"
                        android:gravity="center"
                        android:text="宠物服务"
                        android:textColor="@drawable/selector_rb_hotcompany"
                        android:textSize="17sp" />
                </RadioGroup>
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/iv_home_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/arrow_gray_r" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divideline" />
    </LinearLayout>

</RelativeLayout>