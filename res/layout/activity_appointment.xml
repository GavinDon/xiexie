<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.lhdz.activity.AppointmentActivity" >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/title_" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_default_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/s_name"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/s_rating"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="地址：西安市雁塔区花卉市场101号"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/selector_oppointment"
                android:button="@null"
                android:clickable="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="身份验证"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_oppointment"
                android:button="@null"
                android:clickable="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="证件备案"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_oppointment"
                android:button="@null"
                android:clickable="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="线下验证"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_oppointment"
                android:button="@null"
                android:clickable="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="官方推荐"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:button="@null" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="@color/divideline" />

        <CheckBox
            android:id="@+id/cb_servicetype"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_search"
            android:button="@null"
            android:drawableRight="@drawable/selector_dropdown"
            android:hint="   日常保洁"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_housearea"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/shape_search"
            android:hint="   房屋面积"
            android:inputType="numberDecimal|textAutoCorrect"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/shape_search"
            android:hint="   心里价位"
            android:numeric="decimal"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/shape_search"
            android:hint="   手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:selectAllOnFocus="true"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_starttime"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="14dp"
                android:layout_weight="2"
                android:background="@drawable/shape_search"
                android:hint="   开始时间 "
                android:inputType="time"
                android:maxLength="11"
                android:selectAllOnFocus="true"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="14dp"
                android:layout_weight="1"
                android:background="@drawable/shape_search"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/selector_minustime"
                    android:clickable="true"
                    android:scaleType="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="2小时"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/selector_plustime"
                    android:clickable="true"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:background="@drawable/selector_sunday"
                android:clickable="true"
                android:gravity="center"
                android:text="周日"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@drawable/selector_week"
                android:clickable="true"
                android:gravity="center"
                android:text="周一"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@drawable/selector_week"
                android:clickable="true"
                android:gravity="center"
                android:text="周二"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@drawable/selector_week"
                android:clickable="true"
                android:gravity="center"
                android:text="周三"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@drawable/selector_week"
                android:clickable="true"
                android:gravity="center"
                android:text="周四"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@drawable/selector_week"
                android:clickable="true"
                android:gravity="center"
                android:text="周五"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="14dp"
                android:layout_weight="1"
                android:background="@drawable/selector_sunday"
                android:clickable="true"
                android:gravity="center"
                android:text="周六"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_search"
            android:gravity="left"
            android:hint="备注说明"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/appointment_confirm"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_oppointment"
            android:clickable="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

</ScrollView>