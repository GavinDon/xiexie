<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_homepage3"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginLeft="@dimen/xiexie10"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_default_icon" />

    <LinearLayout
        android:id="@+id/ll_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_homepage3"
        android:orientation="vertical"
        android:weightSum="5" >

        <TextView
            android:id="@+id/tv_comname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陕西欣鼎家政有限公司"
            android:textColor="#534f4f"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="日常保洁今日优惠"
            android:textColor="@color/gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_statement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:singleLine="false"
            android:text="凡当日预订日常保洁，立减5元"
            android:textColor="@color/gray"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/homepager3_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textStyle="bold"
                android:textColor="#f69a68"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="元"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/homepager3_oldprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:layout_marginLeft="8dp"
                android:text="20元"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:text="已售："
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/homepager3_havesale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6025"
                android:textColor="@color/gray"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>