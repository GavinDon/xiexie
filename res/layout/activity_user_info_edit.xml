<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.lhdz.activity.UserInfoEdit" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gree_title" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/xiexie10"
                android:paddingRight="@dimen/xiexie10"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_edit_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <include layout="@layout/mine_setting" />

    <RelativeLayout
        android:id="@+id/rl_editnickname"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <EditText
            android:id="@+id/et_edit_nickname"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="6dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="32" />

        <ImageView
            android:id="@+id/iv_clean_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/gray_cleans"
            android:visibility="gone" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rg_modify_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone" >

        <RadioButton
            android:id="@+id/rb_man"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="@null"
            android:button="@null"
            android:gravity="center_vertical"
            android:text="男"
            android:textColor="@color/black6"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divideline" />

        <RadioButton
            android:id="@+id/rb_woman"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="@null"
            android:button="@null"
            android:text="女"
            android:textColor="@color/black6"
            android:textSize="18sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_area"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/xiexie10"
        android:layout_marginRight="@dimen/xiexie10"
        android:gravity="center_vertical"
        android:textColor="@color/black6"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_edit_graph"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="6dp"
        android:background="@color/white"
        android:maxLength="32"
        android:textColor="@color/black6"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divideline" />

</LinearLayout>